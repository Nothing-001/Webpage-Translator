{
  "manifest_version": 3,
  "name": "Webpage Translator with OCR",
  "version": "1.0",
  "description": "Translates webpage text + image text using a local Python server",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "translator.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
